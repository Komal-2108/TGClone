<form id="bookingForm">
  <label for="customerName">Full Name:</label>
  <input type="text" id="customerName" name="customerName" required />

  <label for="package">Package:</label>
  <select id="package" name="package" required>
    <option value="Goa Getaway">Goa Getaway</option>
    <option value="Kashmir Paradise">Kashmir Paradise</option>
    <option value="Royal Rajasthan">Royal Rajasthan</option>
  </select>

  <label for="date">Travel Date:</label>
  <input type="date" id="date" name="date" required />

  <label for="persons">Number of Persons:</label>
  <input type="number" id="persons" name="persons" required min="1" />

   <button type="submit">Book Now</button>
</form>
<script>
document.getElementById("bookingForm").addEventListener("submit", async function(e) {
  e.preventDefault(); // stop page reload

  const formData = new FormData(this);
  const data = Object.fromEntries(formData.entries());

  try {
    const response = await fetch("/api/bookings", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(data)
    });

    const result = await response.json();
    if (result.success) {
      alert("✅ Booking Successful!");
      this.reset(); // clear form
    } else {
      alert("❌ Booking failed: " + result.message);
    }
  } catch (err) {
    alert("❌ Something went wrong!");
  }
});
</script>

